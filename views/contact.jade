      .letter
        form.letter__content(method="POST", action="/email")
          mixin field(name, text)
            .field-group
              label.field-group__label(for="#{name}") #{text}
              input.field-group__field(type="text", name="#{name}")

          +field("name", "Your Name")
          +field("email", "Your Email")

          .text-group.text-group__field--medium
            textarea.text-group__field(placeholder="Message")

        button.letter__send(type="button", onclick="sendLetter()") Send




