mixin main-menu
  mixin item(link, text)
    a.top-menu__link(href="#{link}", data-hover="#{text}") #{text}
  +item("/clients", "Client Projects")
  +item("/events", "Events")
  +item("/handbook", "Developer's Handbook")
  +item("/job", "Career")
  +item("/team", "Team")
  +item("/contact", "Contact")

mixin top-menu(hide)
  if hide
    .top-menu(id="top-menu", nav-top-menu='#first-segment')
      .top-menu__container
        a.top-menu__logo(href="/", alt="Home")
        nav.top-menu__nav
          +main-menu
  else
    .top-menu
      .top-menu__container
        a.top-menu__logo(href="/", alt="Home")
        nav.top-menu__nav
          +main-menu