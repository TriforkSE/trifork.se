
top-menu-height = 70px


.top-menu
  background-color rgba(color-bg-dark, 85%)
  height top-menu-height
  width 100%
  position fixed
  top 0
  z-index 300
  transition top 0.4s

.top-menu--alternative
  c = darken(color-bg, 5%)
  background-color rgba(c, 85%)
  border-bottom solid 1px c


.top-menu--alternative .top-menu__link
  color color-text

  &:before
    background-color color-text

.top-menu__logo
  background-image url(/img/logo.svg)
  background-repeat no-repeat
  size = 70px
  background-size size size
  width size
  height size
  display block
  position absolute
  top 35px
  margin-left space-unit

.top-menu__logo:hover
  animation rumble linear 0.3s 0s infinite


@keyframes rumble {
  0%, 100% {}
  50% { transform: rotate(7deg) }
}

.top-menu__container
  margin 0 space-unit
  position relative
  text-align center

.top-menu__nav
  list-style-type none
  font-size 18px
  font-default()


.top-menu__link
  display inline-block
  margin 0 20px
  line-height top-menu-height
  color color-link-inverse
  text-decoration none
  transition color 0.2s
  position relative
  box-sizing content-box

  &:before
    content ""
    width 100%
    height 2px
    background-color white
    position: absolute
    bottom: 10px
    left 0
    opacity 0
    transition bottom 0.2s 0.1s, opacity 0.1s 0.1s

  &:hover:before
    opacity 0.9
    bottom: 19px

.top-menu--hidden
  top -120px