.segment
  padding (space-unit * 3) 10px
  position relative
  overflow: hidden

.segment--offset
  margin-top top-menu-height

.segment--primary
  background-color color-primary
  color color-text-primary

.segment__heading
  text-align center
  position relative
  z-index 2

.segment__subheading
  font-default()
  font-size 28px
  color darken(color-primary, 10%)

.segment__bottom-icon
  color black
  position absolute
  bottom space-unit
  width 100%
  text-align center
  left 0
  outline none
  background-color transparent
  border none
  font-size 30px
  cursor pointer

.segment__bottom-icon:hover
  color color-text-inverse

.segment__menu
  position absolute
  width 100%
  top 0
  left 0
  right 0
  text-align center
  @media screen and (max-width: screen-sm-max)
    display none

.segment__inset
  width 900px
  margin (space-unit*3) auto 0

.segment__heading
  transition color 1s

.segment__lead
  text-align center
  max-width 900px
  position relative
  z-index 2
  transition color 1s
  margin (space-unit / 2) auto 0

  a,
  a:visited
    color color-primary
    text-decoration none
    display inline-block

  a:hover
    color lighten(color-primary, 20%)

.segment__lead:first-child
  margin (space-unit * 2) auto 0

.segment__lead--compact
  margin-top space-unit

.segment--secondary
  background-color color-bg-dark-secondary

.segment--secondary .segment__heading
  color: color-text-inverse

.segment--secondary .segment__lead
  color darken(color-text-inverse, 20%)

.segment--line
  min-height (space-unit / 4)
  padding space-unit * 2

.segment--none
  padding 1px

