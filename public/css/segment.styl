.segment
  padding space-unit * 3
  position relative
  z-index 100
  overflow hidden

.segment--offset
  margin-top top-menu-height

.segment--primary
  background-color color-primary

.segment__heading
  text-align center
  position relative
  z-index 2

.segment__subheading
  font-default()
  font-size 28px
  color darken(color-primary, 10%)

.segment__bottom-icon
  color black
  position absolute
  bottom space-unit
  width 100%
  text-align center
  left 0
  outline none
  background-color transparent
  border none
  font-size 30px
  cursor pointer

.segment__bottom-icon:hover
  color color-text-inverse

.segment__menu
  position absolute
  width 100%
  top 0
  left 0
  right 0
  text-align center

.segment__heading
  transition color 1s

.segment__lead
  text-align center
  max-width 900px
  position relative
  z-index 2
  margin (space-unit * 2) auto 0
  transition color 1s

.segment--secondary
  background-color color-bg-dark-secondary

.segment--secondary .segment__heading
  color: color-text-inverse

.segment--secondary .segment__lead
  color darken(color-text-inverse, 20%)


