.map,
#map,
#worldMap
  width: 100%
  height: 400px
  position relative
  background-color black !important

.map--large,
.map--large #map,
.map--large #worldMap
  height: 600px

.map__label
  width: 400px
  line-height 1.5
  position absolute
  top 100px
  left 100px
  background-color color-bg
  padding space-unit

.map--large .map__label
  top auto
  right 100px
  bottom 100px
  left auto

.map__title
  font-ln()
