.video-list
  background-color color-bg-dark-secondary
  overflow-x scroll
  white-space nowrap
  max-height 250px
  padding space-unit * 2 0
  box-sizing content-box
  text-align center


.video-list__item
  display inline-block
  padding 10px
  transition transform 0.1s

.video-list__thumbnail
  width 240px
  border solid 1px transparent
  transition border-color 0.1s

.video-list__thumbnail:hover
  border-color color-text-inverse

.video-list__item:hover
  transform scale(1.2)

.video-list__title
  color color-text-inverse
  font-mb()
  margin-top (space-unit / 4)


.video-list__speaker
  color color-text-inverse
  font-m()