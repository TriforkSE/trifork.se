/*
 * Import nib
 */
@import 'nib'

@import 'grid'

column-width = 60
gutter-width = 20
columns = 12

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

space-unit = 30px
ipad-content-max = 1024px

font-imposing()
  font-family: jaf-bernino-sans, "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif

font-content()
  font-family "freight-text-pro", Georgia, Cambria, "Times New Roman", Times, serif
  font-size 22px
  line-height 1.5
  font-weight 400
  letter-spacing 0.01rem

font-default()
  font-family "proxima-nova", Georgia, Cambria, "Times New Roman", Times, serif

font-monospace()
  font-family: monospace

font-mb()
  font-size 22px
  font-weight 700

font-ln()
  font-size 26px
  font-weight 400

font-lb()
  font-size 26px
  font-weight 700

font-m()
  font-size 22px
  font-weight 400

screen-sm()
  @media screen and (max-width: 960px)
    {block}

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa4f8a
color-bg = #ffffff
color-goto = #fa5b4d

color-bg-dark = black
color-bg-dark-secondary = #272422
color-bg-medium = #747474
color-primary = #ff9115
color-text-primary = darken(color-primary, 60%)

color-text = black
color-text-inverse = white

color-link-inverse = color-text-inverse
color-link-inverse-hover = color-primary

@import top-menu
@import segment
@import icons
@import list-menu
@import link-list
@import img-list
@import thumbnail-list
@import jumbo-list
@import charts
@import article
@import "columns"
@import notifications
@import map
@import content
@import dropdown

@import "pages/frontpage"
@import "pages/events"

@import util

body
  -webkit-font-smoothing antialiased
  font-default()
  background-color color-bg
  font-size 18px

h1, h2, h3, h4
  -webkit-font-smoothing subpixel-antialiased
  font-imposing()

h1
  font-size: 42px

h2
  font-size: 31.5px

h3
  font-size: 18px

h4
  font-size: 16px

p
  line-height 1.8

em
  font-style italic
  white-space nowrap

footer
  text-align center
  color color-text-inverse

.read-more-link
  border solid 1px color-primary
  display inline-block
  padding 15px 40px
  text-decoration none
  color color-primary
  margin (space-unit * 2) 0 0
  border-radius 5px

.read-more-link:hover
  color color-text
  background-color color-primary

.read-more-link--expandable
  color color-text-inverse
  background-color color-primary
  transition: background-color 100ms, color 100ms

.read-more-link--expandable:hover
  color color-text-inverse
