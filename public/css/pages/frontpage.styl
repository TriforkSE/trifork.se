#frontpage
  .link-list
    margin-bottom: 30px;
    margin-top: 10px;

  .segment--bg-img
    background-image url(../img/goto_page_bg.jpg)

  #goto-segment
    padding-bottom 0

.logo-icon--transparent
  margin-top 170px
  text-align center
  margin-bottom space-unit * 2
  path
    box-shadow 0 0 5px #1f1d1b inset

  polygon,
  polyline,
  rect,
  path
    cursor pointer

  @media screen and (max-width: screen-xs-max)
    margin-top 70px

.segment--frontpage
  min-height 510px
  padding-bottom space-unit * 3
  color white
  background-image: radial-gradient(circle farthest-side at right bottom,rgb(70, 25, 167),rgb(12, 96, 150) 40%,rgb(6, 15, 60));

.think-software--frontpage
  position absolute
  bottom space-unit
  right space-unit

#whatwedo b
  color color-info

#frontpageTeamGraph
  position absolute
  height 80px
  left 0
  right 0
  bottom 0
  width 100%
  overflow visible

.frontpageTeamGraph--active .area-chart__area
  fill color-info
  opacity 1

.frontpageTeamGraph--active .area-chart__line
  stroke darken(color-info, 20%)
  stroke-width 1

.segment--frontpage-goto
  background-image url(../img/goto_bg.jpg)

.segment__lead,
.segment__heading
  transition color 0.4s, transform 0.2s
  transform translate(0, 0)

.segment__heading--large
  font-size: 60px

.segment--expanded .segment__lead,
.segment--expanded .segment__heading
  color #000000
  transform translate(0, -5px)

.segment--expanded .big-number__value
  transform translate(0, -5px) scale(1.2)

.big-number__value
  transition all 0.3s 0s

.segment--expanded .big-number__value
  color #FFFFFF

.segment--expanded .big-number--1 .big-number__value
  transition-delay 0.5s

.segment--expanded .big-number--2 .big-number__value
  transition-delay 0.8s

.segment--expanded .big-number--3 .big-number__value
  transition-delay 1.1s

#case-studies
  text-align center
  position relative
  max-width 90%
  margin 0 auto

#case-studies .read-more-link
  margin 60px 0 20px

#signal-controls
  position absolute
  left 0
  top 76px
  color color-muted

  @media screen and (max-width screen-sm-max)
    position static
    margin-top 20px

#signal-controls input
  margin-right: 5px

#analysis
  margin-left 20px
